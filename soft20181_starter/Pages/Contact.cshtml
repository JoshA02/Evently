@page
@model soft20181_starter.Pages.ContactModel
@{
}

@section Styles {
  <link rel="stylesheet" href="~/css/contact.css" />
}

<h1 style="margin-bottom: 0.1em;" id="title">Contact Us</h1>
<h3 style="margin-top: 0;">Got any questions or suggestions? Let us know here!</h3>

<section class="contact-form-container">
  <section>
    <h2>Send us a message</h2>
    <p class="booking-form-description">Please fill out the form below to book your place at this event.</p>
  </section>

  <div class="loader">
    <img src="assets/loader.gif" alt="loading spinner"/>
    <h3></h3>
    <span>Click to refresh page</span>
  </div>
  <form id="contact-form">
    <div class="form-input">
      <label for="fname">First Name</label>
      <input pattern="[a-zA-Z]{2,30}" type="text" id="fname" name="fname" placeholder="John" required>
    </div>
    <div class="form-input">
      <label for="lname">Last Name</label>
      <input pattern="[a-zA-Z]{2,30}" type="text" id="lname" name="lname" placeholder="Doe" required>
    </div>
    <div class="form-input">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" placeholder="name@domain.com" required>
    </div>
    <div class="form-input">
      <label for="phone">Phone Number (optional)</label>
      <input type="tel" id="phone" name="phone" placeholder="01234567890">
    </div>
    <div class="form-input">
      <label for="event-name">Event Name & Host (optional)</label>
      <input type="text" id="event-name" name="event-name" placeholder="A great event (Evently)">
    </div>
    <div class="form-input">
      <label for="desc">Description of issue or suggestion</label>
      <textarea pat type="text" id="desc" name="desc" placeholder="Start typing here..." required></textarea>
    </div>
    <div class="g-recaptcha" data-sitekey="6LdcOyApAAAAADTPWLvEi0RMgb3CpEDD4AYqth6V" data-callback="onContactRecaptchaSubmit" data-expired-callback="onContactRecaptchaExpire"></div>
    <span class="captcha-warning">Please complete the reCaptcha before submitting this form.</span>
    <div class="divider faded"></div>
    <section class="send-container">
      <button class="send-button">SEND <span class="material-symbols-outlined">chevron_right</span></button>
    </section>
  </form>
</section>